@page "/"
@model EncodeModel
@{
    ViewData["Title"] = "Encode";
}

<div class="text-center">
    <div class="row">
        <div class="col-md d-none d-md-block mb-3">
            <img src="img/steganographysaurus.png" alt="steganographysaurus" class="img-fluid rounded" />
        </div>
        <div class="col-md">
            <form method="post" enctype="multipart/form-data" class="text-start">
                <div class="row mb-3">
                    <label asp-for="Message" class="col-sm-2 col-form-label">Message</label>
                    <div class="col-sm-10">
                        <textarea asp-for="Message" class="form-control"></textarea>
                    </div>
                </div>

                <div class="row mb-3">
                    <label asp-for="Password" class="col-sm-2 col-form-label">Password</label>
                    <div class="col-sm-10">
                        <input type="password" asp-for="Password" class="form-control" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        <input type="file" asp-for="CoverImage" accept=".png" class="form-control" placeholder="Choose cover file" onchange="preview(this)" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        <img id="image-preview" class="d-none" alt="preview" />
                    </div>
                </div>

                <button type="submit" class=" btn btn-primary">Encode</button>
            </form>
        </div>
    </div>
</div>
